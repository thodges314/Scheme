#lang scheme
;; exercise 1.11 : tree function to compute f(x) = {x if x < 3} {f(x-1) + 2f(x-2) + 3f(x-3) if x >= 3}
; recursive
(define (oneEleven x)
  (if (< x 3)
      x
      (+ (oneEleven (- x 1)) (* 2 (oneEleven (- x 2))) (* 3 (oneEleven (- x 3))))))
1
(oneEleven 1)
2
(oneEleven 2)
3
(oneEleven 3)
4
(oneEleven 4)
5
(oneEleven 5)
6
(oneEleven 6)
7
(oneEleven 7)
8
(oneEleven 8)
9
(oneEleven 9)
10
(oneEleven 10)
20
(oneEleven 20)
30
(oneEleven 30) ; anything else takes too long

        

